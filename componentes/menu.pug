nav.cyan.darken-3.grad-nav(role="navigation")
  .container.nav-wrapper
    a.brand-logo(href="https://institutoacolher.github.io/site/")
      img.responsive-img.img-brand-logo(src=imgPath+"ita-logo-mono-2.svg",alt="Logo do ITA")

    //- Menus para desktop
    ul.right.hide-on-med-and-down
      each menu in menus
        li
          a(href=menu.url)= menu.titulo
      if lang == "pt-BR"
        li
          a(href="es/")
            img.lang-icon(src=imgPath+"flag_es.svg",alt="Cambiar a español")
      else if lang == "es"
        li
          a(href="../")
            img.lang-icon(src=imgPath+"flag_br.svg",alt="Alterar para português")

    //- Menus para celular e tablet
    ul#nav-mobile.sidenav
      li.mobile-profile
        img.responsive-img(src=imgPath+"ita-logo_1024x1024.svg",alt="Logo do ITA")
      each menu in menus
        li
          a(href=menu.url)
            i.fa-menu-icon(class="fa fa-lg fa-"+menu.fa)
            span= menu.titulo
      if lang == "pt-BR"
        li
          a(href="es/")
            img.lang-icon(src=imgPath+"flag_es.svg")
      else if lang == "es"
        li
          a(href="../")
            img.lang-icon(src=imgPath+"flag_br.svg")

    a.sidenav-trigger(href="#",data-target="nav-mobile")
      i.material-icons menu

